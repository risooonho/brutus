<div class="searchform">
	<form name="searchform" action="" method="get" onsubmit="return submitAjaxSearchForm(this);">
		<div class="input">
			<label for="q">Search for a String:</label>
			<input type="text" name="q" id="q" value="{$q}" />
			<input type="hidden" name="type" id="type" value="" />
		</div>
		<div class="input">
			<input type="submit" />
		</div>
	</form>
</div>