<div id="approveConfirm">	{if $confirmed == ""}		{foreach from=$users item="user"}		<form name="approveConfirm" method="get" action="/{$basedir}index.php">			<input type="hidden" name="verb" value="Approve" />			<input type="hidden" name="confirmed" value="0" />			<input type="hidden" name="key" value="{$key}" />			<input type="hidden" name="id" value="{$user.id}" />			<h1>Approve User Nickname Acquisition</h1>			<p>				{$user.user} has requested that you approve their account.<br />				Choose wisely.			</p>			<input type="submit" value="Decline" onclick="this.form.confirmed.value=0;" />			<input type="submit" value="Approve" onclick="this.form.confirmed.value=1;" />		</form>		{/foreach}	{else}		<h1>Complete</h1>		<p>{$message}</p>		<p>Thanks for doing your part!</p>		<a href="/{$basedir}">Home</a>	{/if}</div>