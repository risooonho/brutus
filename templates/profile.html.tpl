<div id="profile">		<div class="section" id="userDetails">			<h1 onclick="showDisclosedItem('userDetailsForm');">User Details</h1>			<div class="container">				<div id="userDetailsDisplay">					<span class="label">Nickname</span>					<span class="value">{$user.user}</span>					<span class="label">Email</span>					<span class="value">{$user.email}</span>				</div>				<div id="userDetailsForm" class="account" style="opacity:0.0;display:none;">					<form action="/{$basedir}ajax.php" method="post" onsubmit="return submitAjaxProfileForm(this);">						<div class="input">							<label for="user">								Nickname							</label>							<input type="text" name="user" value="{$user.user}" disabled="disabled" />						</div>						<div class="input">							<label for="email">								Email							</label>							<input type="text" name="email" value="{$user.email}" />						</div>						<div class="input">							<label for="password">								Password							</label>							<input type="password" name="password" />						</div>						<div class="input">								<label>&nbsp;</label>							<input type="submit" value="Update" />						</div>					</form>				</div>			</div>		</div>		<div class="section" id="mySearches">			<h1 onclick="showDisclosedItem('mySearchesForm');">My Searches</h1>			<div class="container">				<div id="mySearchesDisplay">					{if $searches|@sizeOf == 0}						<p>It looks like you don't have any searches in the database yet, probably because you've only just registered. We can import them for you if you'd like.</p>						<a href="javascript:submitAjaxImportCookieSearches('{$user.id}');void(0);">Import Cookie Searches</a>					{else}						<table>							<caption>Most Recent Searches</caption>							<tr>								<th></th>								<th>Term</th>								<th>Last Run</th>								<th>Run #</th>								<th>Popularity</th>							</tr>							{assign var="displayed" value=1}							{foreach from=$searches item="search" key="index" name="summary"}								{if $search.active == 1}									{if $displayed < 11}										<tr>											<td>{$displayed}</td>											<td class="term"><a href="/{$basedir}index.php?q={$search.data}">{$search.data}</a></td>											<td class="lastrun">{$search.lastrun|date_format}</td>											<td class="runcount">{$search.runcount}</td>											<td class="popularity">{math equation="(x+y)*0.1" x=$search.runcount y=$search.totalPopularity assign="runCount"}{$runCount|string_format:"%1.2f"}</td>										</tr>										{assign var="displayed" value=$displayed+1}									{/if}								{/if}								{/foreach}						</table>					{/if}				</div>				<div id="mySearchesForm" style="opacity:0.0;display:none;">					<form action="/{$basedir}ajax.php" method="get" onsubmit="return submitAjaxModifySearchesForm(this,'showDisclosedItem(\'mySearchesForm\');');">						<table>							<caption>Modify Your Saved Searches</caption>							<tr>								<th></th>								<th>Term</th>								<th>Last Run</th>								<th>Run #</th>								<th>Popularity</th>							</tr>							{foreach from=$searches item="search" key="index" name="modify"}								<tr>									<td><input type="checkbox" name="searchQueue[]" value="{$search.id}" {if $search.active == 1}checked="checked"{/if} /></td>									<td class="term"><a href="/{$basedir}index.php?q={$search.data}">{$search.data}</a></td>									<td class="lastrun">{$search.lastrun|date_format}</td>									<td class="runcount">{$search.runcount}</td>									<td class="popularity">{math equation="(x+y)*0.1" x=$search.runcount y=$search.totalPopularity assign="runCount"}{$runCount|string_format:"%1.2f"}</td>								</tr>								{if $smarty.foreach.modify.iteration == 20 && $searches|@sizeOf > 40}									<tr>										<td colspan="5">Whew, that's a lot of searches, do you want to commit your changes now?<br />														<input type="submit" value="Commit" />										</td>									</tr>								{/if}							{/foreach}							<tr>								<td colspan="5">Do you want to commit your changes?<br />												<input type="submit" value="Commit" />								</td>							</tr>						</table>					</form>				</div>			</div>		</div>		<div class="section" id="myComments">			<h1 onclick="showDisclosedItem($('myComments'));">My Comments</h1>			<div class="container">				<div id="myCommentsDisplay">								</div>				<div id="myCommentsForm" style="opacity:0.0;display:none;">								</div>			</div>		</div>		</div>